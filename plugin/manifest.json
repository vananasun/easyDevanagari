{
  "name": "easySanskrit",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Pronounce and translate Sanskrit text.",
  "permissions": [ "contextMenus" ],
  "icons": {
    "128": "icon128.png"
  },
  "web_accessible_resources": ["speaker.png", "clipboard.png"],


  "background": {
    "scripts": [ "build/js/plugin.js" ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "build/js/third-party/jquery-3.5.1.slim.min.js", "build/js/content.js" ]
    }
  ],

  "commands": {
    "toggle-show-latin": {
      "suggested_key": { "default": "Alt+R" },
      "description": "Toggle the Dictionary popup when selecting text."
    }
  }

}
